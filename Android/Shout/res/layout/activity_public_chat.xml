<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PublicChatActivity" 
    android:orientation="vertical"
    android:background="@drawable/background">

     
     
     <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    
    	<ImageButton
        android:id="@+id/profielbutton"
        android:background="#0000"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/profielbutton"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="profielbutton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        ></ImageButton>
    	
    <ImageButton
        android:id="@+id/deelnemersbutton"
        android:background="#0000"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/deelnemersbutton"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="deelnemersbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        ></ImageButton>
    
	</RelativeLayout>
	
    <ListView
        android:id="@+id/publicChatListview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:stackFromBottom="true"> 
    </ListView>
    
    <View
        android:id="@+id/lijn"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:background="@drawable/lineshape"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	    
    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        style="@style/button"
        android:background="@drawable/sendknop2">
    </Button>
        	    
    <EditText
        android:id="@+id/chatEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sendbutton"
        android:inputType="text"
        android:imeOptions="actionDone">
    </EditText>
    
</RelativeLayout>

</LinearLayout>