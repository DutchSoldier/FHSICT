<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" 
    android:orientation="vertical">

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView
        	android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/blauw"
            android:gravity="center"
            android:text="Menu"
            android:textColor="@color/wit" 
            android:paddingTop="5dp"
        	android:paddingBottom="5dp"
        	android:textStyle="bold"
        	android:textSize="20sp"/>

    </RelativeLayout>
        
    <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Doe enquete"
            android:id="@+id/btn_doeEnquete"
            android:layout_weight="1"/>
    
    <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Maak/Wijzig enquete"
            android:id="@+id/btn_wijzigEnquete"
            android:layout_weight="1"/>
    
    <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Resultaten enquete"
            android:id="@+id/btn_resultatenEnquete"
            android:layout_weight="1"/>
    
    <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gebruikers"
            android:id="@+id/btn_gebruikers"
            android:layout_weight="1"/>
    
</LinearLayout>
