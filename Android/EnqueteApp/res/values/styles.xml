<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>

    <style name="button" parent="AppBaseTheme">
        <item name="android:background">@drawable/buttonstate</item>
		<item name="android:textColor">@color/wit</item>	
		<item name="android:gravity">center_horizontal|center_vertical</item>	
		<item name="android:layout_margin">5dp</item>	
		<item name="android:padding">5dp</item>
        </style>
        
    <style name="togglebutton" parent="AppBaseTheme">
        <item name="android:background">@drawable/togglestate</item>
		<item name="android:textColor">@drawable/togglecolor</item>	
		<item name="android:gravity">center_horizontal|center_vertical</item>	
		<!-- <item name="android:layout_margin">10dp</item>	-->
		 <item name="android:padding">5dp</item>
        </style>
        
    <style name="textview" parent="AppBaseTheme">
        <item name="android:background">@drawable/textviewshape</item>
        <item name="android:textColor">@color/blauw</item>
        <item name="android:gravity">center_vertical|left</item>
		<item name="android:layout_marginLeft">10dp</item>	
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
        </style>
        
    <style name="editview" parent="AppBaseTheme">
        <item name="android:background">@drawable/editviewshape</item>
        <item name="android:textColor">@color/witgrijs</item>
        <item name="android:gravity">center_vertical|left</item>
		<item name="android:layout_marginLeft">10dp</item>	
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>